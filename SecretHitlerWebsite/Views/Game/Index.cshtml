@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/game.css" ></link>

@section Scripts {

<script type="text/html" id="player-row-template">
    <div class="player-row">
        <div class="player-name">
            <span>You there</span>
        </div>
        <div class="player-hand-button">
            <button class="btn btn-primary">Give</button>
        </div>
    </div>
</script>

<script type="text/javascript">
    var baseUrl = '@(Url.ActionLink("Index"))';
    var cardBackUrl = '@(Url.Content("~/cardback.png"))';
    var cardBackLiberalUrl = '@(Url.Content("~/cardbackliberal.png"))';
    var cardBackFascistUrl = '@(Url.Content("~/cardbackfascist.png"))';
</script>

<script type="text/javascript" src="~/js/game.js"></script>

}

<div class="game-container">
    <div class="player-pane">
        <div class="player-list">
            <div class="player-row">
                <div class="player-name">
                    <span></span>
                </div>
                <div class="player-hand-button">
                    <button class="btn btn-primary">Give</button>
                </div>
            </div>
        </div>
    </div>
    <div class="player-pane-compliment">
        <div class="policy-pane container-flex">
            <div class="row">
                <div class="col col-md-2">
                    <img src="~/cardback.png" />
                    <div class="card-annotation">
                        <p>
                            <span>Draw Pile</span>
                        </p>
                        <p>
                            <span>x<span class="draw-pile-count"></span></span>
                        </p>
                    </div>
                </div>
                <div class="col col-md-2">
                    <img class="policy policy-liberal" src="~/cardback.png" />
                </div>
                <div class="col col-md-2">
                    <img class="policy policy-liberal" src="~/cardback.png" />
                </div>
                <div class="col col-md-2">
                    <img class="policy policy-liberal" src="~/cardback.png" />
                </div>
                <div class="col col-md-2">
                    <img class="policy policy-liberal" src="~/cardback.png" />
                </div>
                <div class="col col-md-2">
                    <img class="policy policy-liberal" src="~/cardback.png" />
                </div>
            </div>
            <div class="row">
                <div class="col col-md-2">
                    <img src="~/cardback.png" />
                    <div class="card-annotation">
                        <p>
                            <span>Discard Pile</span>
                        </p>
                        <p>
                            <span>x<span class="discard-pile-count"></span></span>
                        </p>
                    </div>
                </div>
                <div class="col col-md-2">
                    <img class="policy policy-fascist" src="~/cardback.png" />
                </div>
                <div class="col col-md-2">
                    <img class="policy policy-fascist" src="~/cardback.png" />
                </div>
                <div class="col col-md-2">
                    <img class="policy policy-fascist" src="~/cardback.png" />
                </div>
                <div class="col col-md-2">
                    <img class="policy policy-fascist" src="~/cardback.png" />
                </div>
                <div class="col col-md-2">
                    <img class="policy policy-fascist" src="~/cardback.png" />
                </div>
            </div>
        </div>
        <div class="hand-pane container-flex">
            <div class="row">
                <div class="col col-md-3"></div>
                <div class="col col-md-2">
                    <img class="hand d-none" src="~/cardback.png" />
                </div>
                <div class="col col-md-2">
                    <img class="hand d-none" src="~/cardback.png" />
                </div>
                <div class="col col-md-2">
                    <img class="hand d-none" src="~/cardback.png" />
                </div>
                <div class="col col-md-3"></div>
            </div>
            <div class="row">
                <div class="col col-md-3"></div>
                <div class="col col-md-2">
                    <div class="hand-label d-none">
                        <button type="button" class="btn btn-primary">Discard</button>
                    </div>
                </div>
                <div class="col col-md-2">
                    <div class="hand-label d-none">
                        <button type="button" class="btn btn-primary">Discard</button>
                    </div>
                </div>
                <div class="col col-md-2">
                    <div class="hand-label d-none">
                        <button type="button" class="btn btn-primary">Discard</button>
                    </div>
                </div>
                <div class="col col-md-3"></div>
            </div>
        </div>
    </div>
</div>
