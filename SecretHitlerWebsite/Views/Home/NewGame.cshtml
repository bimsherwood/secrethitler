@{
    ViewData["Title"] = "Home Page";
    var session = ViewData["Session"];
    var myName = ViewData["MyName"];
    var players = (List<string>)(ViewData["Players"] ?? throw new ArgumentNullException("ViewData.Players"));
}

@section Scripts {
<script type="text/javascript">
    function copyText(text){
        navigator.clipboard.writeText(text);
        $(".copied-indicator").removeClass("d-none");
    }
</script>
}

<div class="text-center">
    <h1 class="display-4">New Game</h1>
    <p>
        Welcome @myName
    </p>
    <p>
        Have your friends join your game using the session key <a href="javascript:copyText('@session')">@ViewData["Session"]</a>.
        <small class="d-none copied-indicator">Copied!</small>
    </p>
</div>

<div class="d-flex justify-content-center">
    <form asp-controller="Home" asp-action="StartGame">
        <input type="hidden" name="Session" value="@session" />
        <p>
            Current players:
        </p>
        <ul>
            @foreach(var player in players){
                <li>@player</li>
            }
        </ul>
        <div class="form-group">
            <button type="button" class="btn btn-secondary" onclick="location.reload()">Refresh</button>
            <button type="submit" class="btn btn-primary">Let&apos;s Go!</button>
        </div>
    </form>
</div>
