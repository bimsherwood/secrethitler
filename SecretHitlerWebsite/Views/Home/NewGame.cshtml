@{
    ViewData["Title"] = "Home Page";
    var session = ViewData["Session"];
    var myName = ViewData["MyName"];
}

@section Scripts {
<script type="text/javascript">
    function copyText(text){
        navigator.clipboard.writeText(text);
        $(".copied-indicator").removeClass("d-none");
    }
</script>
}

<div class="text-center">
    <h1 class="display-4">New Game</h1>
    <p>
        Welcome @myName
    </p>
    <p>
        Have your friends join your game using the session key <a href="javascript:copyText('@session')">@ViewData["Session"]</a>.
        <small class="d-none copied-indicator">Copied!</small>
    </p>
</div>

<div class="d-flex justify-content-center">
    <form asp-controller="Home" asp-action="Start">
        <input type="hidden" name="Session" value="@session" />
        <div class="form-group">
        <p>
            Current players:
        </p>
        <ul>
            <li>You there</li>
            <li>Allan</li>
            <li>Ben</li>
            <li>Craig</li>
            <li>Dorn</li>
        </ul>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Let&apos;s Go!</button>
        </div>
    </form>
</div>
